@{
    ViewData["Menu"] = "Security";
    ViewData["Title"] = "User Setup";
}

@section Styles {
    <link href="~/lib/datatables.net-bs5/css/dataTables.bootstrap5.min.css" rel="stylesheet" />
    <link href="~/lib/datatables.net-responsive-bs5/css/responsive.bootstrap5.min.css" rel="stylesheet" />
    <link href="~/css/addtionalcss/toastr.css" rel="stylesheet" />
    <link href="~/css/addtionalcss/toastr.min.css" rel="stylesheet" />
    <link href="~/lib/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet" />
    <style type="text/css">
        .theme-color {
            background-color: var(--bs-app-theme);
            color: var(--bs-app-theme-color);
        }

        .txtAlignCenter {
            text-align: center;
        }

        .txtAlignLeft {
            text-align: left;
        }

        .txtAlignRight {
            text-align: right;
        }
    </style>
}
@section Scripts {
    <script src="~/lib/datatables.net/js/jquery.dataTables.min.js"></script>
    <script src="~/lib/datatables.net-bs5/js/dataTables.bootstrap5.min.js"></script>
    <script src="~/lib/datatables.net-responsive/js/dataTables.responsive.min.js"></script>
    <script src="~/lib/datatables.net-responsive-bs5/js/responsive.bootstrap5.min.js"></script>
    <script src="~/js/demo/table-manage-default.demo.js"></script>
    <script src="~/lib/@@highlightjs/cdn-assets/highlight.min.js"></script>
    <script src="~/js/demo/render.highlight.js"></script>
    <script src="~/lib/parsleyjs/dist/parsley.min.js"></script>
    <script src="~/js/additionaljs/toastr.js"></script>
    <script src="~/js/additionaljs/toastr.min.js"></script>
    <script src="~/lib/sweetalert/dist/sweetalert.min.js"></script>
    <script type="text/javascript">
        var userlogin = '@ViewBag.UserLogin'
    </script>
    <script src="~/js/additionaljs/controller/UserSetup.js?n=1"></script>
}

@*<h1 class="page-header"> <i class="fa fa-key"></i> @ViewData["Menu"]</h1>*@
<div class="panel panel-inverse">
    <div class="panel-heading" style="background-color:var(--bs-app-theme); color:var(--bs-app-theme-color);">
        <h4 class="panel-title" style="font-size:medium"><i class="bi bi-person-fill"></i> @ViewData["Title"]</h4>
        <div class="panel-heading-btn">
            <a href="javascript:;" class="btn btn-xs btn-icon btn-default" data-toggle="panel-expand"><i class="fa fa-expand"></i></a>
            <a href="javascript:;" class="btn btn-xs btn-icon btn-success" data-toggle="panel-reload"><i class="fa fa-redo"></i></a>
            <a href="javascript:;" class="btn btn-xs btn-icon btn-warning" data-toggle="panel-collapse"><i class="fa fa-minus"></i></a>
            <a href="javascript:;" class="btn btn-xs btn-icon btn-danger" data-toggle="panel-remove"><i class="fa fa-times"></i></a>
        </div>
    </div>
    <div class="panel-body">
        <div class="mb-4">
            <a href="#mymodal" class="btn btn-theme d-block w-100px h-35px" data-bs-toggle="modal" onclick="AddNewData()"><i class="bi bi-plus-circle-fill fs-14px"></i>&nbsp; New</a>
        </div>
        <table id="tableID" class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th width="1%">Action</th>
                    <th width="7%" style="text-align:center;">User ID</th>
                    <th width="15%" style="text-align:center;">User Name</th>
                    <th width="8%" style="text-align:center;">Shop Type</th>
                    <th width="8%" style="text-align:center;">Shift</th>
                    <th width="1%" style="text-align:center;">User Group</th>
                    <th width="1%" style="text-align:center;">Locked</th>
                    <th width="15%" style="text-align:center;">Description</th>
                    <th width="10%" style="text-align:center;">Update User</th>
                    <th width="8%" style="text-align:center;">Update Date</th>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>

        <div class="modal fade" id="mymodal">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="ModalTitle"></h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-hidden="true"></button>
                    </div>
                    <div class="modal-body">
                        <div class="panel-body">
                            <div class="row mb-10px">
                                <label class="form-label col-form-label col-md-3">User ID <small style="color:red">*</small></label>
                                <div class="col-md-9">
                                    <div class="input-group">
                                        <input class="form-control" type="text" id="userid" name="userid" placeholder="Please fill User ID" />
                                        <div class="theme-color input-group-text"><i class="bi bi-person-fill fs-14px"></i></div>
                                        <div class="invalid-tooltip">Please fill a Unique UserID!</div>
                                    </div>
                                </div>
                            </div>

                            <div class="row mb-10px">
                                <label class="form-label col-form-label col-md-3">User Name <small style="color:red">*</small></label>
                                <div class="col-md-9">
                                    <div class="input-group">
                                        <input class="form-control" type="text" id="username" name="username" placeholder="Please fill User Name" />
                                        <div class="theme-color input-group-text"><i class="bi bi-person-fill fs-14px"></i></div>
                                        <div class="invalid-tooltip">Please fill a User Name!</div>
                                    </div>
                                </div>
                            </div>

                            <div class="row mb-10px">
                                <label class="form-label col-form-label col-md-3">Password <small style="color:red">*</small></label>
                                <div class="col-md-9">
                                    <div class="input-group">
                                        <input class="form-control" type="password" id="password" name="password" placeholder="Please fill Password" />
                                        <button class="btn btn-theme" id="passwordshow"><i id="passwordshow-icon" class="bi bi-lock-fill fs-14px"></i></button>
                                        <div class="invalid-tooltip">Please fill a Password!</div>
                                    </div>
                                </div>
                            </div>

                            <div class="row mb-10px">
                                <label class="form-label col-form-label col-md-3">Shop Type <small style="color:red">*</small></label>
                                <div class="col-md-9">
                                    <div class="input-group">
                                        <select class="form-select" id="shoptype" name="shoptype"></select>
                                        <div class="theme-color input-group-text"><i class="fa fa-sitemap"></i></div>
                                        <div class="invalid-tooltip">Please choose a Shop Type!</div>
                                    </div>
                                </div>
                            </div>

                            <div class="row mb-10px">
                                <label class="form-label col-form-label col-md-3">Shift <small style="color:red">*</small></label>
                                <div class="col-md-9">
                                    <div class="input-group">
                                        <select class="form-select" id="shift" name="shift"></select>
                                        <div class="theme-color input-group-text"><i class="bi bi-people-fill fs-14px"></i></div>
                                        <div class="invalid-tooltip">Please choose a Shift!</div>
                                    </div>
                                </div>
                            </div>

                            <div class="row mb-10px">
                                <label class="form-label col-form-label col-md-3">User Group <small style="color:red">*</small></label>
                                <div class="col-md-9">
                                    <div class="input-group">
                                        <select class="form-select" id="groupid" name="groupid"></select>
                                        <div class="theme-color input-group-text"><i class="bi bi-people-fill fs-14px"></i></div>
                                        <div class="invalid-tooltip">Please choose a User Group!</div>
                                    </div>
                                </div>
                            </div>

                            <div class="row mb-10px">
                                <label class="form-label col-form-label col-md-3">Description </label>
                                <div class="col-md-9">
                                    <div class="input-group">
                                        <textarea class="form-control" id="description" name="description" placeholder="Please fill description"></textarea>
                                    </div>
                                </div>
                            </div>

                            <div class="row mb-10px">
                                <label class="form-label col-form-label col-md-3">Locked</label>
                                <div class="col-md-9">
                                    <div class="input-group">
                                        <input type="checkbox" class="form-check-input" name="locked" id="locked" />
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-white" data-bs-dismiss="modal" onclick="ClearModal()">Close</button>
                        <button type="button" class="btn btn-theme" id="InsertData">Save</button>
                        <button type="button" class="btn btn-theme" id="UpdateData" style="display:none;">Update</button>
                    </div>
                </div>
            </div>
        </div>

        <div class="modal fade" id="modal-alert">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h4 class="modal-title">Delete Data User</h4>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-hidden="true"></button>
                    </div>
                    <div class="modal-body">
                        <div class="alert alert-warning">
                            <h5><i class="fa fa-info-circle"></i> Are You Sure? </h5>
                            <p>You want to delete the data user?</p>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-white" data-bs-dismiss="modal" onclick="ClearModal()">Close</button>
                        <button type="button" class="btn btn-theme" id="DeletedData">Delete</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

