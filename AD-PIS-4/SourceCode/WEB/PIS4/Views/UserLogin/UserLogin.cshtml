@{
    ViewData["Title"] = "Login";
    ViewData["AppHeaderNone"] = "true";
    ViewData["AppSidebarNone"] = "true";
    ViewData["AppClass"] = "app-without-header app-without-sidebar";
    ViewData["AppContentClass"] = "p-0";
    ViewData["AppBodyClass"] = "pace-top";
}

@section Styles {
    <link href="~/css/addtionalcss/toastr.css" rel="stylesheet" />
    <link href="~/css/addtionalcss/toastr.min.css" rel="stylesheet" />
    <link href="~/lib/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet" />
}

@section Scripts {
    <script src="~/js/demo/login-v2.demo.js"></script>
    <script src="~/js/vendor.min.js"></script>
    <script src="~/js/app.min.js"></script>
    <script src="~/js/additionaljs/toastr.js"></script>
    <script src="~/js/additionaljs/toastr.min.js"></script>
    <script src="~/js/additionaljs/controller/Login.js"></script>
}

<div class="login login-v2 fw-bold">
    <div class="login-cover">
        <div class="login-cover-img" style="background-image: url(/img/login-bg/login-bg-15.jpg)" data-id="login-cover-image"></div>
        <div class="login-cover-bg"></div>
    </div>
    <div class="login-container">
        <div class="login-header">
            <div class="brand">
                <div class="d-flex align-items-center">
                    <span class="logo"></span> <b>PIS</b> <span style="margin-left:5px"> SYSTEM</span>
                </div>
                <small>Production Intruction System</small>
            </div>
            <div class="icon">
                <i class="fa fa-lock"></i>
            </div>
        </div>
        <div class="login-content">
            <div class="form-floating mb-20px">
                <input id="txtuserid" type="text" class="form-control fs-13px h-45px border-0" placeholder="User Name" />
                <label for="txtpassword" class="d-flex align-items-center text-gray-600 fs-13px">User Name</label>
                <div class="invalid-tooltip">please fill a User Name!</div>
            </div>

            <div class="form-floating mb-20px">
                <input class="form-control fs-13px h-45px border-0" type="password" id="txtpassword" placeholder="password" />
                <button style="position: absolute; right: 1px; transform: translateY(-130%); z-index: 5; background-color:transparent; border-style:none;" id="passwordshow">
                    <i style=" color: var(--bs-app-theme);" id="passwordshow-icon" class="bi bi-lock-fill fs-20px"></i>
                </button>
                <div class="invalid-tooltip">please fill a password!</div>
                <label for="txtpassword" class="d-flex align-items-center text-gray-600 fs-13px">password</label>
            </div>

            @*             <div class="form-floating mb-20px">
            <input id="txtpassword" type="password" class="form-control fs-13px h-45px border-0" placeholder="Password" value="Tosis123" />
            <label for="Password" class="d-flex align-items-center text-gray-600 fs-13px">Password</label>
            </div>*@

            <div class="mb-20px">
                <button type="button" id="btnlogin" class="btn btn-theme d-block w-100 h-45px btn-lg">Login</button>
            </div>
            <div class="text-gray-500" style="text-align:center;">
                <label>V.0.0.1</label>
            </div>
        </div>
    </div>
</div>